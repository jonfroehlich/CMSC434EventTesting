<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hcil.umd.edu.cmsc434eventtesting.MainActivity"
    android:background="#588c7e"
    android:padding="5dp"
    android:id="@+id/viewGroupRoot">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Component Tree Depth: Root"
        android:id="@+id/textViewDepth1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Handle Event: Off"
        android:textOn="Handle Event: On"
        android:text="Handle Event"
        android:id="@+id/toggleButtonHandleEventDepth1"
        android:checked="false" />

    <LinearLayout
        android:id="@+id/viewGroupDepth1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toggleButtonHandleEventDepth1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:background="#F2E394"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Component Tree Depth: 1"
            android:id="@+id/textViewLabelDepth2" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Handle Event: Off"
            android:textOn="Handle Event: On"
            android:text="Handle Event"
            android:id="@+id/toggleButtonHandleEventDepth2"
            android:checked="false" />

        <LinearLayout
            android:id="@+id/viewGroupDepth2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toggleButtonHandleEventDepth2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#F2AE72"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/buttonDepth2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:background="#D96459"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/viewGroupDepth3a">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Component Tree Depth: 3"
                android:id="@+id/textViewLabelDepth4a" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Handle Event: Off"
                android:textOn="Handle Event: On"
                android:text="Handle Event"
                android:id="@+id/toggleButtonHandleEventDepth4a"
                android:checked="false" />

            <LinearLayout
                android:id="@+id/viewGroupDepth4"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/buttonDepth3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:background="#8C4646"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Component Tree Depth: 4"
                    android:id="@+id/textViewLabelDepth5" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="Handle Event: Off"
                    android:textOn="Handle Event: On"
                    android:text="Handle Event"
                    android:id="@+id/toggleButtonHandleEventDepth5"
                    android:checked="false" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewGroupDepth3b"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#D96459"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Component Tree Depth: 3"
                android:id="@+id/textViewLabelDepth4b" />

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Handle Event: Off"
                android:textOn="Handle Event: On"
                android:text="Handle Event"
                android:id="@+id/toggleButtonHandleEventDepth4b"
                android:checked="false" />

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>


</LinearLayout>
